            android:id="@+id/difficultyImg3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5" android:scaleType="fitXY"
            android:src="@drawable/difficulty3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="685"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgDifficulty4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" android:scaleType="fitXY"
            android:src="@drawable/difficulty41" />

        <ImageView
            android:id="@+id/difficultyImg4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5" android:scaleType="fitXY"
            android:src="@drawable/difficulty3" />
    </LinearLayout>

    <ImageView
        android:id="@+id/difficultyControlsImg"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="685"
        android:scaleType="fitXY"
        android:src="@drawable/difficulty_controls" />

</LinearLayout>